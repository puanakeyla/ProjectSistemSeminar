import { useState, useEffect, useMemo } from 'react';
import { FileEdit, Loader2, AlertTriangle, Inbox, Calendar, UserRound, Plus } from 'lucide-react';
import axios from 'axios';
import './Revisi.css';

function Revisi() {
  const [seminars, setSeminars] = useState([]);
  const [selectedSeminar, setSelectedSeminar] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);
  const [activeTab, setActiveTab] = useState('all');
  const [showDetailModal, setShowDetailModal] = useState(false);
  const [showAddModal, setShowAddModal] = useState(false);
  const [showValidateModal, setShowValidateModal] = useState(false);
  const [selectedItem, setSelectedItem] = useState(null);
  const [submitting, setSubmitting] = useState(false);
  const [addForm, setAddForm] = useState({
    poin_revisi: '',
    kategori: ''
  });
  const [validateAction, setValidateAction] = useState('approve');
  const [rejectionReason, setRejectionReason] = useState('');

  useEffect(() => {
    const timer = setTimeout(() => {
      fetchSeminars();
    }, 100);
    return () => clearTimeout(timer);
  }, []);

  const fetchSeminars = async () => {
    try {
      setLoading(true);
      setError(null);
      const response = await axios.get('http://localhost:8000/api/dosen/seminars', {
        headers: { Authorization: `Bearer ${localStorage.getItem('token')}` }
      });

      const scheduledSeminars = response.data.data.filter(s => s.schedule);
      setSeminars(scheduledSeminars);
    } catch (err) {
      console.error('Error:', err);
      setError(err.response?.data?.message || 'Gagal memuat data');
    } finally {
      setLoading(false);
    }
  };

  const fetchSeminarDetail = async (id) => {
    try {
      const response = await axios.get(`http://localhost:8000/api/dosen/seminars/${id}`, {
        headers: { Authorization: `Bearer ${localStorage.getItem('token')}` }
      });
      setSelectedSeminar(response.data.data);
      setShowDetailModal(true);
    } catch (err) {
      console.error('Error:', err);
      alert('Gagal memuat detail');
    }
  };

  const handleAddRevision = async () => {
    if (!addForm.poin_revisi.trim()) {
      alert('Poin revisi harus diisi');
      return;
    }

    try {
      setSubmitting(true);
      await axios.post(
        `http://localhost:8000/api/dosen/revisions/${selectedSeminar.id}/items`,
        addForm,
        {
          headers: { Authorization: `Bearer ${localStorage.getItem('token')}` }
        }
      );

      alert('‚úÖ Poin revisi berhasil ditambahkan');
      setShowAddModal(false);
      setAddForm({ poin_revisi: '', kategori: '' });
      await fetchSeminarDetail(selectedSeminar.id);
      await fetchSeminars();
    } catch (err) {
      alert('‚ùå ' + (err.response?.data?.message || 'Gagal menambahkan'));
    } finally {
      setSubmitting(false);
    }
  };

  const handleValidateItem = async () => {
    if (validateAction === 'reject' && !rejectionReason.trim()) {
      alert('Alasan penolakan harus diisi');
      return;
    }

    try {
      setSubmitting(true);
      await axios.post(
        `http://localhost:8000/api/dosen/revisions/${selectedSeminar.revision.id}/items/${selectedItem.id}/validate`,
        {
          action: validateAction,
          rejection_reason: validateAction === 'reject' ? rejectionReason : null
        },
        {
          headers: { Authorization: `Bearer ${localStorage.getItem('token')}` }
        }
      );

      alert(validateAction === 'approve' ? '‚úÖ Revisi disetujui' : '‚ùå Revisi ditolak');
      setShowValidateModal(false);
      setSelectedItem(null);
      setValidateAction('approve');
      setRejectionReason('');
      await fetchSeminarDetail(selectedSeminar.id);
      await fetchSeminars();
    } catch (err) {
      alert('‚ùå ' + (err.response?.data?.message || 'Gagal memvalidasi'));
    } finally {
      setSubmitting(false);
    }
  };

  const filteredSeminars = useMemo(() => {
    return seminars.filter(s => {
      if (activeTab === 'all') return true;
      if (activeTab === 'has_revision') {
        return s.revision && s.revision.total_items > 0;
      }
      if (activeTab === 'completed') {
        return s.revision && s.revision.progress === 100;
      }
      return true;
    });
  }, [seminars, activeTab]);

  const getMyItems = () => {
    if (!selectedSeminar?.revision?.items_by_dosen) return [];
    
    const userId = JSON.parse(localStorage.getItem('user'))?.id;
    const myGroup = selectedSeminar.revision.items_by_dosen.find(g => g.dosen_id === userId);
    
    return myGroup ? myGroup.items : [];
  };

  const getTipeColor = (tipe) => {
    const colors = {
      proposal: '#667eea',
      hasil: '#27ae60',
      komprehensif: '#f39c12',
    };
    return colors[tipe?.toLowerCase()] || '#666';
  };

  const formatTitleCase = (value) => {
    if (!value) return '-';
    return value.toString().replace(/_/g, ' ').split(' ').filter(Boolean)
      .map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ');
  };

  const formatDate = (value) => {
    if (!value) return '-';
    const date = new Date(value);
    if (Number.isNaN(date.getTime())) return value;
    return date.toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' });
  };

  if (loading) {
    return (
      <div className="revisi-wrapper">
        <div className="revisi-loading">
          <div className="revisi-loading-icon">
            <Loader2 size={50} />
          </div>
          <h2>Memuat data...</h2>
          <p>Harap tunggu sebentar.</p>
        </div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="revisi-wrapper">
        <div className="revisi-error">
          <div className="revisi-error-icon">
            <AlertTriangle size={40} />
          </div>
          <h2>Terjadi Kesalahan</h2>
          <p>{error}</p>
          <button className="revisi-retry-btn" onClick={fetchSeminars}>Coba Lagi</button>
        </div>
      </div>
    );
  }

  return (
    <div className="revisi-wrapper">
      <div className="revisi-header">
        <div className="revisi-header-left">
          <div className="revisi-header-icon">
            <FileEdit size={24} />
          </div>
          <h1>Revisi Seminar</h1>
          <p>Kelola revisi seminar mahasiswa bimbingan Anda</p>
        </div>
        <div className="revisi-badge">
          <span className="revisi-badge-count">{seminars.length}</span>
          <span className="revisi-badge-label">Seminar</span>
        </div>
      </div>

      {seminars.length > 0 && (
        <div className="revisi-tabs">
          <button
            className={`revisi-tab ${activeTab === 'all' ? 'active' : ''}`}
            onClick={() => setActiveTab('all')}
          >
            Semua
            <span className="revisi-tab-count">{seminars.length}</span>
          </button>
          <button
            className={`revisi-tab ${activeTab === 'has_revision' ? 'active' : ''}`}
            onClick={() => setActiveTab('has_revision')}
          >
            Ada Revisi
            <span className="revisi-tab-count">
              {seminars.filter(s => s.revision && s.revision.total_items > 0).length}
            </span>
          </button>
          <button
            className={`revisi-tab ${activeTab === 'completed' ? 'active' : ''}`}
            onClick={() => setActiveTab('completed')}
          >
            Selesai
            <span className="revisi-tab-count">
              {seminars.filter(s => s.revision && s.revision.progress === 100).length}
            </span>
          </button>
        </div>
      )}

      <div className="revisi-content">
        {filteredSeminars.length === 0 ? (
          <div className="revisi-empty">
            <div className="revisi-empty-icon">
              <Inbox size={40} />
            </div>
            <h2>Tidak Ada Seminar</h2>
            <p>Belum ada seminar yang terjadwal untuk revisi.</p>
          </div>
        ) : (
          filteredSeminars.map(seminar => (
            <div key={seminar.id} className="revisi-card" onClick={() => fetchSeminarDetail(seminar.id)}>
              <div className="revisi-card-header">
                <div className="revisi-student">
                  <div className="revisi-avatar">
                    {seminar.mahasiswa.name.charAt(0)}
                  </div>
                  <div className="revisi-student-info">
                    <h3>{seminar.mahasiswa.name}</h3>
                    <span className="revisi-npm">{seminar.mahasiswa.npm}</span>
                  </div>
                </div>
                <span className="revisi-type-badge" style={{ backgroundColor: getTipeColor(seminar.jenis_seminar) }}>
                  {formatTitleCase(seminar.jenis_seminar)}
                </span>
              </div>

              <div className="revisi-card-body">
                <h3 className="revisi-title">{seminar.judul}</h3>

                <div className="revisi-meta">
                  <span className="revisi-meta-item">
                    <UserRound size={14} className="revisi-meta-icon" />
                    {seminar.my_role}
                  </span>
                  <span className="revisi-meta-item">
                    <Calendar size={14} className="revisi-meta-icon" />
                    {formatDate(seminar.schedule?.tanggal)}
                  </span>
                </div>

                {seminar.revision && (
                  <div className="revisi-progress-section">
                    <div className="revisi-progress-header">
                      <span className="revisi-progress-label">Progress</span>
                      <span className="revisi-progress-percent">{seminar.revision.progress}%</span>
                    </div>
                    <div className="revisi-progress-bar">
                      <div className="revisi-progress-fill" style={{ width: `${seminar.revision.progress}%` }} />
                    </div>
                  </div>
                )}
              </div>
            </div>
          ))
        )}
      </div>

      {/* Detail Modal */}
      {showDetailModal && selectedSeminar && (
        <div className="revisi-modal-overlay" onClick={() => setShowDetailModal(false)}>
          <div className="revisi-modal" onClick={e => e.stopPropagation()}>
            <div className="revisi-modal-header">
              <h2>Detail Revisi - {selectedSeminar.mahasiswa.name}</h2>
              <button className="revisi-modal-close" onClick={() => setShowDetailModal(false)}>√ó</button>
            </div>

            <div className="revisi-modal-body">
              {selectedSeminar.revision ? (
                <>
                  <div className="revisi-detail-section">
                    <div className="revisi-stats">
                      <div className="revisi-stat-box approved">
                        <div className="revisi-stat-num">{selectedSeminar.revision.approved_items}</div>
                        <div className="revisi-stat-label">Disetujui</div>
                      </div>
                      <div className="revisi-stat-box submitted">
                        <div className="revisi-stat-num">{selectedSeminar.revision.submitted_items}</div>
                        <div className="revisi-stat-label">Disubmit</div>
                      </div>
                      <div className="revisi-stat-box pending">
                        <div className="revisi-stat-num">{selectedSeminar.revision.pending_items}</div>
                        <div className="revisi-stat-label">Pending</div>
                      </div>
                    </div>
                  </div>

                  <div className="revisi-detail-section">
                    <div style={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', marginBottom: '15px' }}>
                      <h3 style={{ margin: 0 }}>Poin Revisi Saya</h3>
                      <button
                        className="revisi-submit-btn"
                        onClick={(e) => {
                          e.stopPropagation();
                          setShowAddModal(true);
                        }}
                        style={{ display: 'flex', alignItems: 'center', gap: '6px' }}
                      >
                        <Plus size={16} />
                        Tambah Poin
                      </button>
                    </div>

                    <div className="revisi-items-list">
                      {getMyItems().length === 0 ? (
                        <div style={{ padding: '30px', textAlign: 'center', background: '#f9fafb', borderRadius: '8px' }}>
                          <p style={{ color: '#7f8c8d', margin: 0 }}>Anda belum menambahkan poin revisi</p>
                        </div>
                      ) : (
                        getMyItems().map((item, idx) => (
                          <div key={idx} className="revisi-item">
                            <div className="revisi-item-header">
                              <span className="revisi-item-num">#{idx + 1}</span>
                              <span className={`revisi-item-status ${item.status}`}>
                                {item.status_display}
                              </span>
                            </div>
                            <p className="revisi-item-text">{item.poin_revisi}</p>
                            {item.kategori && (
                              <span className="revisi-item-category">üìå {item.kategori}</span>
                            )}

                            {item.mahasiswa_notes && (
                              <div style={{ marginTop: '10px', padding: '12px', background: '#eff6ff', borderLeft: '3px solid #3b82f6', borderRadius: '6px' }}>
                                <strong style={{ fontSize: '13px' }}>üìù Catatan Mahasiswa:</strong>
                                <p style={{ margin: '8px 0 0 0', fontSize: '14px' }}>{item.mahasiswa_notes}</p>
                                {item.file_url && (
                                  <a href={item.file_url} target="_blank" rel="noopener noreferrer" style={{ display: 'inline-block', marginTop: '8px', color: '#3b82f6', fontWeight: 600, fontSize: '13px' }}>
                                    üìÑ Lihat File
                                  </a>
                                )}
                              </div>
                            )}

                            {item.status === 'submitted' && (
                              <div className="revisi-item-actions">
                                <button
                                  className="revisi-submit-btn"
                                  onClick={(e) => {
                                    e.stopPropagation();
                                    setSelectedItem(item);
                                    setShowValidateModal(true);
                                  }}
                                >
                                  Validasi
                                </button>
                              </div>
                            )}

                            {item.rejection_reason && (
                              <div style={{ marginTop: '10px', padding: '12px', background: '#fee', borderLeft: '3px solid #e74c3c', borderRadius: '6px' }}>
                                <strong style={{ fontSize: '13px' }}>‚ùå Alasan Penolakan:</strong>
                                <p style={{ margin: '8px 0 0 0', fontSize: '14px' }}>{item.rejection_reason}</p>
                              </div>
                            )}
                          </div>
                        ))
                      )}
                    </div>
                  </div>

                  <div className="revisi-detail-section">
                    <h3>Revisi dari Dosen Lain</h3>
                    {selectedSeminar.revision.items_by_dosen
                      .filter(g => g.dosen_id !== JSON.parse(localStorage.getItem('user'))?.id)
                      .map((group, idx) => (
                        <div key={idx} className="revisi-dosen-group">
                          <div className="revisi-dosen-header">
                            <span className="revisi-dosen-name">
                              üë®‚Äçüè´ {group.dosen_name}
                            </span>
                            <div className="revisi-dosen-stats">
                              <span className="revisi-stat-badge approved">‚úÖ {group.approved_items}</span>
                              <span className="revisi-stat-badge submitted">üì§ {group.submitted_items}</span>
                              <span className="revisi-stat-badge pending">‚è≥ {group.pending_items}</span>
                            </div>
                          </div>
                          <div className="revisi-items-list">
                            {group.items.map((item, itemIdx) => (
                              <div key={itemIdx} className="revisi-item">
                                <div className="revisi-item-header">
                                  <span className="revisi-item-num">#{itemIdx + 1}</span>
                                  <span className={`revisi-item-status ${item.status}`}>
                                    {item.status_display}
                                  </span>
                                </div>
                                <p className="revisi-item-text">{item.poin_revisi}</p>
                                {item.kategori && (
                                  <span className="revisi-item-category">üìå {item.kategori}</span>
                                )}
                              </div>
                            ))}
                          </div>
                        </div>
                      ))}
                  </div>
                </>
              ) : (
                <div style={{ padding: '40px 20px', textAlign: 'center' }}>
                  <p style={{ color: '#7f8c8d', marginBottom: '20px' }}>Belum ada revisi untuk seminar ini</p>
                  <button
                    className="revisi-submit-btn"
                    onClick={() => setShowAddModal(true)}
                    style={{ display: 'inline-flex', alignItems: 'center', gap: '6px' }}
                  >
                    <Plus size={16} />
                    Tambah Poin Pertama
                  </button>
                </div>
              )}
            </div>
          </div>
        </div>
      )}

      {/* Add Modal */}
      {showAddModal && (
        <div className="revisi-modal-overlay" onClick={() => setShowAddModal(false)}>
          <div className="revisi-modal" onClick={e => e.stopPropagation()} style={{ maxWidth: '500px' }}>
            <div className="revisi-modal-header">
              <h2>Tambah Poin Revisi</h2>
              <button className="revisi-modal-close" onClick={() => setShowAddModal(false)}>√ó</button>
            </div>

            <div className="revisi-modal-body">
              <div className="revisi-form-group">
                <label>Poin Revisi *</label>
                <textarea
                  value={addForm.poin_revisi}
                  onChange={e => setAddForm({ ...addForm, poin_revisi: e.target.value })}
                  placeholder="Jelaskan poin yang perlu direvisi..."
                  rows="4"
                />
              </div>

              <div className="revisi-form-group">
                <label>Kategori (Opsional)</label>
                <input
                  type="text"
                  value={addForm.kategori}
                  onChange={e => setAddForm({ ...addForm, kategori: e.target.value })}
                  placeholder="Misal: Metodologi, Abstrak, dll"
                  style={{ width: '100%', padding: '12px', border: '1px solid #e0e0e0', borderRadius: '8px', fontSize: '14px' }}
                />
              </div>
            </div>

            <div className="revisi-modal-actions">
              <button className="revisi-btn-cancel" onClick={() => setShowAddModal(false)}>
                Batal
              </button>
              <button className="revisi-btn-primary" onClick={handleAddRevision} disabled={submitting}>
                {submitting ? 'Menyimpan...' : 'Tambah'}
              </button>
            </div>
          </div>
        </div>
      )}

      {/* Validate Modal */}
      {showValidateModal && selectedItem && (
        <div className="revisi-modal-overlay" onClick={() => setShowValidateModal(false)}>
          <div className="revisi-modal" onClick={e => e.stopPropagation()} style={{ maxWidth: '500px' }}>
            <div className="revisi-modal-header">
              <h2>Validasi Revisi</h2>
              <button className="revisi-modal-close" onClick={() => setShowValidateModal(false)}>√ó</button>
            </div>

            <div className="revisi-modal-body">
              <div style={{ padding: '12px', background: '#f9fafb', borderRadius: '8px', marginBottom: '20px' }}>
                <strong>Poin:</strong>
                <p style={{ margin: '8px 0', fontSize: '14px' }}>{selectedItem.poin_revisi}</p>
                {selectedItem.mahasiswa_notes && (
                  <>
                    <strong style={{ marginTop: '12px', display: 'block' }}>Catatan:</strong>
                    <p style={{ margin: '8px 0 0 0', fontSize: '14px' }}>{selectedItem.mahasiswa_notes}</p>
                  </>
                )}
              </div>

              <div className="revisi-form-group">
                <label>Keputusan</label>
                <div style={{ display: 'flex', gap: '10px' }}>
                  <button
                    onClick={() => setValidateAction('approve')}
                    style={{
                      flex: 1,
                      padding: '12px',
                      border: validateAction === 'approve' ? '2px solid #667eea' : '2px solid #e0e0e0',
                      background: validateAction === 'approve' ? '#eff6ff' : 'white',
                      borderRadius: '8px',
                      fontWeight: 600,
                      cursor: 'pointer',
                      transition: 'all 0.3s'
                    }}
                  >
                    ‚úÖ Setujui
                  </button>
                  <button
                    onClick={() => setValidateAction('reject')}
                    style={{
                      flex: 1,
                      padding: '12px',
                      border: validateAction === 'reject' ? '2px solid #e74c3c' : '2px solid #e0e0e0',
                      background: validateAction === 'reject' ? '#fee' : 'white',
                      borderRadius: '8px',
                      fontWeight: 600,
                      cursor: 'pointer',
                      transition: 'all 0.3s'
                    }}
                  >
                    ‚ùå Tolak
                  </button>
                </div>
              </div>

              {validateAction === 'reject' && (
                <div className="revisi-form-group">
                  <label>Alasan Penolakan *</label>
                  <textarea
                    value={rejectionReason}
                    onChange={e => setRejectionReason(e.target.value)}
                    placeholder="Jelaskan mengapa revisi ditolak..."
                    rows="3"
                  />
                </div>
              )}
            </div>

            <div className="revisi-modal-actions">
              <button className="revisi-btn-cancel" onClick={() => setShowValidateModal(false)}>
                Batal
              </button>
              <button
                className="revisi-btn-primary"
                onClick={handleValidateItem}
                disabled={submitting}
                style={validateAction === 'reject' ? { background: '#e74c3c' } : {}}
              >
                {submitting ? 'Memproses...' : (validateAction === 'approve' ? 'Setujui' : 'Tolak')}
              </button>
            </div>
          </div>
        </div>
      )}
    </div>
  );
}

export default Revisi;
